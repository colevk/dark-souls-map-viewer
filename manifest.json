{
  "manifest_version": 2,
  "name": "Dark Souls Map Viewer",
  "description": "Explore the environments of the Dark Souls series.",
  "version": "1.0.2",

  "permissions": [
    "system.display",
    "pointerLock"
  ],
  "requirements": {
    "3D": {
      "features": ["webgl"]
    }
  },
  "app": {
    "background": {
      "scripts": ["launch.js"],
      "persistent": false
    }
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "128": "icon128.png",
    "256": "icon256.png"
  }
}